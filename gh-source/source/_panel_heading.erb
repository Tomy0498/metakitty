<%
  topic_id = topic
  topic_inner = case topic
    when :getting_started
      "Getting Started"
    when :pro_tips
      "Pro Tips"
    end
  %>

<div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <% content_tag :a,
          "data-toggle" => :collapse,
          "data-parent" => "#accordion",
          :href => "##{topic}" do %>
          <%= topic_inner %>
      <% end %>
      </h4>
    </div>
    <% content_tag :div, id: topic_id, class: "panel-collapse collapse" do %>
      <div class="panel-body">
        <%= data.send(topic).first[1]["text"] %>
      </div>
      <%= partial :_panel_body, :locals => {:topic => topic} %>
  <% end %>
  </div>
</div>
